<cg>
  <non-bonded>
    <name>W-W</name>
    <type1>W</type1>
    <type2>W</type2>
    <min>0.2</min>
    <max>0.9</max>
    <step>0.002</step>
    <inverse>
      <target>W-W.dist.tgt</target>
      <post_add>convergence</post_add>
      <post_add_options><convergence><norm>2</norm></convergence></post_add_options>
      <post_update> smooth </post_update>
      <post_update_options>
	<scale>0.5</scale>
        <smooth><iterations>3</iterations></smooth>
        <pressure>
	<type>simple</type>
	<do>1</do>
	<simple><scale>0.001</scale></simple>
        </pressure>
      </post_update_options>
      <p_target>1.0</p_target>
      <gromacs>
       <table>table_W_W.xvg</table>
     </gromacs>
    </inverse>

  </non-bonded>

  <!-- general options for inverse script -->
  <inverse>
    <!-- 298.0*0.00831451 gromacs units -->
    <kBT>4.43163383</kBT>
    <program>gromacs</program>
    <gromacs>
      <grompp>
	<bin>gmx_mpi grompp</bin>
      </grompp>
      <g_energy><bin>gmx_mpi energy</bin></g_energy>
      <mdrun><command>mpirun -n 20 gmx_mpi mdrun -cpi state.cpt </command></mdrun>
      <table_bins>0.002</table_bins>
      <pot_max>1e8</pot_max>
      <!--<equi_time>2500</equi_time>-->
      <table_end>2.0</table_end>
      <traj>traj.xtc</traj>
    </gromacs>
    <!-- <initial_configuration>laststep</initial_configuration> -->
    <filelist>
	index.ndx grompp.mdp topol.top table.xvg
    </filelist>
    <!-- do so many iterations -->
    <iterations_max>450</iterations_max>
    <!-- ibi: inverse biltzmann imc: inverse monte carlo -->
    <method>ibi</method>
    <convergence_check>
      <type>default</type>
      <limit>0.001</limit>
    </convergence_check>
    <cleanlist>traj.xtc traj.trr topol.tpr</cleanlist>
  </inverse>
</cg>
